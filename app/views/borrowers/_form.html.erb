<%= form_for(@borrower) do |f| %>
  <% if @borrower.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@borrower.errors.count, "error") %>prohibited this borrower from being saved:</h2>

      <ul>
      <% @borrower.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Название'%>
    <%= f.text_field :name %>
    <%= f.label 'Сумма займа' %>
    <%= f.number_field :loan %>
    <%= f.label 'Срок займа' %>
    <%= f.number_field :period %>
    <%= f.label 'Процентная ставка (годовая)' %>
    <%= f.number_field :annual_rate %>
    <%= f.label 'Процентная ставка при просрочке' %>
    <%= f.number_field :overdue_rate %>
  </div>

  <div class="actions">
    <%= f.submit 'OK'%>
  </div>
<% end %>