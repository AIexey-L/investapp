<p id="notice"><%= notice %></p>

<h1 >Заемщики</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th>Сумма займа</th>
      <th>Срок займа</th>
      <th>Ставка годовых</th>
      <th>Ставка при просрочке</th>
      <th colspan="3"></th>
    </tr>
    <br>
  </thead>

  <tbody>
    <% @borrowers.each do |borrower| %>
      <tr>
        <td><%= borrower.name %></td>
        <td><%= borrower.loan %></td>
        <td><%= borrower.period %></td>
        <td><%= borrower.annual_rate %></td>
        <td><%= borrower.overdue_rate %></td>
        <td class="table-active"><%= link_to 'Детализация', borrower %></td>
        <td class="table-active"><%= link_to 'Изменить', edit_borrower_path(borrower) %></td>
        <td class="table-danger"><%= link_to 'Удалить', borrower, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>

<button type="button" class="btn btn-secondary btn-lg btn-block"><%= link_to 'Добавить нового заемщика', new_borrower_path %></button>