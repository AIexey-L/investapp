<p id="notice"><%= notice %></p>

<h1>Платежи заемщика:
<%= @borrower.name %>
</h1>

<br>

<table class="table table-bordered table-striped">
  <thead>
	  <tr>
	    <th>Месяц</th>
	    <th>Сумма</th>
	    <th colspan="1"></th>
	 </tr>

	  <tbody>
	  	<tr>
	  	<% @payments.each do |payment| %>
		    <td><%= payment.month %></td>
		    <td><%= payment.payment %></td>
		    <td class="table-active"><%= link_to 'Редактирование платежа', borrower_payment_path(id: payment.id) %></td>
	    </tr>
	    <% end %>
	  </tbody>
  
</table>

<br>

<button type="button" class="btn btn-secondary btn-lg btn-block"><%= link_to 'Добавить новый платеж', new_borrower_payment_path %></button>
