<p id="notice"><%= notice %></p>

<h1>Заемщики</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Сумма займа</th>
      <th>Срок займа</th>
      <th>Ставка годовых</th>
      <th>Ставка при просрочке</th>
      <th colspan="3"></th>
    </tr>
    <tr>
    	
    </tr>
  </thead>

  <tbody>
    <% @borrowers.each do |borrower| %>
      <tr>
        <td><%= borrower.name %></td>
        <td><%= borrower.loan %></td>
        <td><%= borrower.period %></td>
        <td><%= borrower.annual_rate %></td>
        <td><%= borrower.overdue_rate %></td>
        <td><%= link_to 'Детализация по заемщику', borrower %></td>
        <td><%= link_to 'Изменить данные заемщика', edit_borrower_path(borrower) %></td>
        <td><%= link_to 'Удалить заемщика', borrower, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

